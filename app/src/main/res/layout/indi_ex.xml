<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/exeDemo"
        android:layout_width="wrap_content"
        android:layout_height="205dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="25dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/exeType"
        android:layout_width="169dp"
        android:layout_height="32dp"
        android:layout_alignEnd="@+id/exeDemo"

        android:layout_alignParentTop="true"
        android:layout_marginTop="210dp"
        android:layout_marginEnd="-1dp"
        android:fontFamily="@font/be_vietnam_extrabold"
        android:gravity="center"
        android:text="TextView"
        android:textSize="20sp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/musGroup"
        android:layout_width="169dp"
        android:layout_height="32dp"
        android:layout_alignStart="@+id/exeDemo"
        android:layout_alignEnd="@+id/exeType"

        android:layout_alignParentTop="true"
        android:layout_marginStart="-3dp"
        android:layout_marginTop="210dp"
        android:layout_marginEnd="208dp"
        android:fontFamily="@font/be_vietnam_extrabold"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/exeDescrip"
        android:layout_width="wrap_content"
        android:layout_height="237dp"
        android:layout_alignStart="@+id/musGroup"
        android:layout_alignEnd="@+id/musGroup"
        android:textSize="15sp"
        android:fontFamily="@font/be_vietnam_extrabold"
        android:textColor="@color/black"



        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="248dp"
        android:layout_marginEnd="-212dp"
        android:text="TextView" />


</RelativeLayout>